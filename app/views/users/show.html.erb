<div class="has-text-centered container is-fluid mt-5">
  <div class="title is-3"> Upcoming </div>
</div>

<% @upcoming_events.each do | event | %>
    <div class="container is-fluid">
      <div class="card mt-4">
        <p>Host:
        <% if current_user.email = event.creator.email %>
          Me
        <% else %>
          <%= @event.creator.email %>
        <% end %>
        </p>
        <p> <%= event.name %> </p>
        <p> <%= event.description %> </p>
        <p> <%= event.location %> </p>
        <p> <%= event.time %> </p>
        <div class="field">
          <label class="label">Invite Via Email:</label>
        <div class="control">
       <input class="input" type="text" placeholder="Ex: zjcrumpton@gmail.com">
      <div class="field is-grouped">
      <div class="control">
      <button class="button is-link">Submit</button>
      </div>
  </div>
  </div>
</div>

      </div>
    </div>
<% end %>


